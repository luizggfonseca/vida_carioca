
import React from 'react';
import ReactDOM from 'react-dom/client';
import App from './App';

console.log("Iniciando montagem do React...");
const rootElement = document.getElementById('root');
if (!rootElement) {
  console.error("ERRO CRITICAL: Elemento #root não encontrado!");
  throw new Error("Não foi possível encontrar o elemento root para montar.");
}

try {
  console.log("Criando root e renderizando App...");
  const root = ReactDOM.createRoot(rootElement);
  root.render(
    <React.StrictMode>
      <App />
    </React.StrictMode>
  );
  console.log("Renderização disparada com sucesso.");
} catch (err) {
  console.error("Erro fatal durante a renderização:", err);
}
